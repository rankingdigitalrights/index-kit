# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
tab_width = 2
continuation_indent_size = 2 # IntelliJ family IDEs
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[html]
indent_size = 2
tab_width = 2

[njk]
indent_size = 2
tab_width = 2

[json]
indent_size = 2
tab_width = 2
